<% wrap_layout :layout do %>
  <article>
    <div class="container">
      <div class="row">
        <div class="span8 offset2">
          <h1 class="page-title"><%= data.page.title %> <time datetime="<%= data.page.date.xmlschema %>" pubdate><%= data.page.date.strftime('%b %e %Y') %></time></h1>
          <%= yield %>
        </div>
      </div>
    </div>
  </article>
<% end %>
